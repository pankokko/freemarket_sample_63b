%head
  %script{src: "https://www.google.com/recaptcha/api.js"}
%body
  .login-wrapper
    .login-header
      %svg.login-header-logo{viewbox: "0 0 281.19 84.08", xmlns: "http://www.w3.org/2000/svg" }
        %defs
          :css
            .cls-1{fill:#dc4912;stroke:#fff;stroke-miterlimit:10;}.cls-2{font-size:48px;fill:#231815;font-family:YuGo-Bold-83pv-RKSJ-H, YuGothic;}
        %title アセット 3
        %g{"data-name" => "レイヤー 2", id: "レイヤー_2"}
          %g{"data-name" => "レイヤー 1", id: "レイヤー_1-2"}
            %polygon.cls-1{points: "36.41 83.5 0.5 62.77 0.5 21.31 36.41 0.58 72.32 21.31 72.32 62.77 36.41 83.5"}
            %polyline.cls-1{points: "0.5 21.31 36.41 42.04 72.32 21.31"}
            %polyline.cls-1{points: "36.41 83.5 36.41 49.36 36.41 42.04"}
            %line.cls-1{x1: "36.41", x2: "0.5", y1: "52.41", y2: "31.67"}
            %line.cls-1{x1: "72.32", x2: "36.41", y1: "33.2", y2: "50.88"}
            %text.cls-2{transform: "translate(86.41 62.77)"} Fmarket
    .login-contents
      .login-contents__first
        %p.login-contents__first--text
          アカウントをお持ちでない方はこちら
          = link_to step1_signup_index_path , class:"new-link" do
            .login-contents__first--btn
              新規会員登録
      .login-contents__second
        .login-contents__second--Facebook
          = link_to user_facebook_omniauth_authorize_path, class: "facebook_link" do
            %i.fa.fa-facebook-square.fa-lg.login-icon
            Facebookでログイン
        .login-contents__second--Google
          = link_to user_google_oauth2_omniauth_authorize_path, class: "google_link" do
            %i.fa.fa-google.login-icon
            Googleでログイン
      .login-contents__therd
        = form_for(resource, as: resource_name, url: session_path(resource_name), autocomplete: "off") do |f|
          .login-form--mail
            = f.email_field :email, placeholder: "例) PC・携帯どちらでも可",class:"login-input-mail input-def"
          .login-form--password
            = f.password_field :password, placeholder: "7文字以上", class: "login-form--password input-def"
          .g-recaptcha{"data-callback" => "clearcall", "data-sitekey" => "6Lc1WMcUAAAAAOIGpMnZx8HCcCTNlhRjCRzw4LgJ\r\n"}
          = f.submit "ログイン", class: "login-btn-submit" 
        .login-form--btn
        %a.loguin-form--text{href: "http://localhost:3000/signup/index"}
          パスワードをお忘れの方
    = render "shared/sabfooter"

