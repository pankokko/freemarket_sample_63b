%body.sell-body
  .sell-wrapper
    %header.sell-header
      %h1 
        %svg.complete-header-logo{viewbox: "0 0 281.19 84.08", xmlns: "http://www.w3.org/2000/svg" }
          %defs
            :css
              .cls-1{fill:#dc4912;stroke:#fff;stroke-miterlimit:10;}.cls-2{font-size:48px;fill:#231815;font-family:YuGo-Bold-83pv-RKSJ-H, YuGothic;}
          %title アセット 3
          %g{"data-name" => "レイヤー 2", id: "レイヤー_2"}
            %g{"data-name" => "レイヤー 1", id: "レイヤー_1-2"}
              %polygon.cls-1{points: "36.41 83.5 0.5 62.77 0.5 21.31 36.41 0.58 72.32 21.31 72.32 62.77 36.41 83.5"}
              %polyline.cls-1{points: "0.5 21.31 36.41 42.04 72.32 21.31"}
              %polyline.cls-1{points: "36.41 83.5 36.41 49.36 36.41 42.04"}
              %line.cls-1{x1: "36.41", x2: "0.5", y1: "52.41", y2: "31.67"}
              %line.cls-1{x1: "72.32", x2: "36.41", y1: "33.2", y2: "50.88"}
              %text.cls-2{transform: "translate(86.41 62.77)"} Fmarket
    %main.sell-main
      .sell-main-secondary
        .sell-main-tertiary
          %h2
            商品の情報を入力
          = form_for @exhibit, url: exhibit_path(@exhibit), html:{class:"form-information"} do |f|
            .img-box
              %h3
                出品画像
                %span
                  必須
              %p
                最大10枚までアップロードできます
              .upload-box
                .upload-box-items
                  .upload-box-items-secondary
                    %ul
                .upload-box-img
                  = fa_icon 'picture-o', class: 'icon'
                  = f.fields_for :images, @exhibits do |i|
                    = i.file_field :image, class:"file_field"
                  %pre.sell-pre 
                    ドラッグアンドドロップ
                    またはクリックしてファイルをアップロード
                  %i.icon-camera
            .product-name-box
              .product-name
                %label 
                  商品名
                  %span
                    必須
                .product-name-input
                  = f.text_field :name, placeholder: "商品名(必須 40文字まで)" ,class:"sell-product-input"
              .description
                %label
                  商品の説明
                  %span
                    必須
                = f.text_area :description, class:"sell-textarea",rows:"5", placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"
            .details-box
              %h3.details-h3
                商品の詳細
              .details-category
                .details-group1
                  %label
                    カテゴリー
                    %span
                      必須
                  .details-group1-category
                    .details-group1-category-secondary
                      %i.icon-arrow-bottom
                      = f.collection_select :category_id, @grandchildren, :id, :name,{}, {class: 'select-default'}
                .details-group2
                  %label
                    商品の状態
                    %span
                      必須
                  .details-Status
                    %i.icon-arrow-bottom
                    = f.collection_select :status, Status.all, :status, :status, {}, {class: "select-default"}
            .delivery-box
              %h3.delivery-h3
                配送について
              %a{href:"",target:"_blank"}?
              .delivery-category-box
                .delivery-form-burden
                  %label
                    配送の負担
                    %span
                      必須
                  .burden-box
                    %i.icon-arrow-bottom
                    = f.select :ship_fee, [ ["---",""], ["送料込み","送料込み"], ["着払い","着払い"] ], {}, {class: "select-default"}
                .delivery-form-region
                  %label
                    配送元の地域
                    %span
                      必須
                  .region-box
                    %i.icon-arrow-bottom
                    = f.collection_select :prefecture, Prefecture.all, :prefecture, :prefecture, {}, {class: "select-default"}
                .delivery-form-select
                  %label
                    発送の方法
                    %span
                      必須
                  .select-box
                    %i.icon-arrow-bottom
                    = f.collection_select :ship, Ship.all, :ship, :ship, {class: "select-default"}
                .delivery-form-days
                  %label
                    発送までの日数
                    %span
                      必須
                  .days-box
                    %i.icon-arrow-bottom
                    = f.collection_select :shipment, Shipment.all, :shipment, :shipment, {class: "select-default"}
            .price-box
              %h3.price-h3
                販売価格(300〜9,999,999)
              %a{href:"",target:"_blank"}?
              .price-input-box
                %ul.price-input
                  %li.price-group
                    .price-group-secondary
                      %label.sell-left
                        価格
                        %span
                          必須
                      .sell-right-price
                        ¥
                        .sell-right-price-input
                          = f.text_field :price , class:"sell-price-input" ,value: "",placeholder:"例）300"
                  %li.fee-group
                    .fee-left
                      販売手数料 (10%)
                    .fee-right -
                  %li.profit-group
                    .profit-left
                      販売利益
                    .profit-right -
            .exhibit-btn-box
              .exhibit-caution
                %p
                  %a{href:"",target:"_blank"}禁止されている出品 
                  
                  %a{href:"",target:"_blank"}行為
                  を必ず確認してください
                %p
                  またブランド品でシリアルナンバー等がある場合はご記載ください。
                  %a{href:"",target:"_blank"}偽ブランドの販売
                  は犯罪であり処罰される可能性があります。
                %p
                  また、出品をもちまして
                  %a{href:"",target:"_blank"}加盟店規約
                  に同意したことになります。
              - if @exhibit.user_id == current_user.id
                = f.submit "編集する"
              %a.sell-return-btn
                キャンセル
        
    %footer.sell-footer
      %mav
        %ul
          %li
            %a{href:"",target:"_blank"}プライバシーポリシー
          %li.sell-li
            %a{href:"",target:"_blank"}メルカリ利用規約
          %li.sell-li
            %a{href:"",target:"_blank"}特定商取引に関する表記
      %a.sell-footer-logo{href:"",target:"_blank"} 
        %svg.sell-footer-logo-secondary{viewbox:"0 0 147.09 129.96", xmlns:"http://www.w3.org/2000/svg"}
          %defs
            :css
              .cls-3,.cls-4{fill:#231815;stroke-miterlimit:10;opacity:0.19;}.cls-3{stroke:#fff;}.cls-4{font-size:36px;stroke:#231815;font-family:YuGo-Bold-83pv-RKSJ-H, YuGothic;}
          %title アセット 13
          %g{"data-name" => "レイヤー 2", id:"レイヤー_2"}
            %g{"data-name" => "レイヤー 1", id:"レイヤー_1-2"}
              %polygon.cls-3{points:"71.54 83.5 35.63 62.77 35.63 21.31 71.54 0.58 107.45 21.31 107.45 62.77 71.54 83.5"}
              %polyline.cls-3{points:"35.63 21.31 71.54 42.04 107.45 21.31"}
              %polyline.cls-3{points:"71.54 83.5 71.54 49.36 71.54 42.04"}
              %line.cls-3{x1:"71.54", x2:"35.63", y1:"52.41", y2:"31.67"}
              %line.cls-3{x1:"107.45", x2:"71.54", y1:"33.2", y2:"50.88"}
              %text.cls-4{transform:"translate(0.5 117.04)"} Fmarket
      %p
