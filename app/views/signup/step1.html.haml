= form_for @user, url: step2_signup_index_path, method: :get, html: {class: 'first-main__box'} do |f|
  = f.text_field :nickname, placeholder: '例) メルカリ太郎'
  = f.email_field :email, placeholder: 'PC・携帯どちらでも可'
  = f.password_field :password, placeholder: '6文字以上'
  = f.password_field :password_confirmation, placeholder: '6文字以上'
  = f.text_field :family_name_kanji, placeholder: '例) 山田'
  = f.text_field :first_name_kanji, placeholder: '例) 彩'
  = f.text_field :family_name_kana, placeholder: '例) ヤマダ'
  = f.text_field :first_name_kana, placeholder: '例) アヤ'
  = f.collection_select :year, Years.all, :year, :year, {class: "select-def"}
  = f.collection_select :month, Months.all, :month, :month, {class: "select-def"}
  = f.collection_select :day, Days.all, :day, :day, {class: "select-def"}
  = f.submit "次へ進む", class: "registration-btn-submit"